<UserControl x:Class="TPVTFG.Frontend.ControlUser.ControlClientes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPVTFG.Frontend.ControlUser"
                xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
         xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
         mc:Ignorable="d" 
         d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">

            <TextBlock Text="Listado de Productos" Margin="20" FontSize="20"/>
        </StackPanel>
        <Grid>
            <DataGrid x:Name="dgAñadirCliente" ItemsSource="{Binding _listaClientes}" AutoGenerateColumns="False" ColumnWidth="*" CanUserAddRows="False" IsReadOnly="True"  >
                <DataGrid.Columns >
                    <DataGridTextColumn Header="DNI" Binding="{Binding Dni}" />

                    <DataGridTemplateColumn Header="Nombre-Apellido">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate >
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Nombre}"/>
                                    <TextBlock Text="{Binding Apellidos}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                    <DataGridTextColumn Header="Dirección" Binding="{Binding Direccion}"/>

                    <DataGridTemplateColumn Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>

                                <StackPanel Orientation="Horizontal">
                                    <Button Content="{mat:PackIcon Kind=Edit}" Style="{StaticResource MaterialDesignToolButton}" Foreground="DodgerBlue" x:Name="btnEditar" Click="btnEditar_Click" />
                                    <Button Content="{mat:PackIcon Kind=Delete}" Foreground="Red" Style="{StaticResource MaterialDesignToolButton}" x:Name="btnBorrar" Click="btnBorrar_Click" />
                                </StackPanel>

                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>

            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
