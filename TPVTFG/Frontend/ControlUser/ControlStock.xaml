<UserControl x:Class="TPVTFG.Frontend.ControlUser.ControlStock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPVTFG.Frontend.ControlUser"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
          
            <TextBlock Text="Listado de Productos" Margin="20" FontSize="20"/>
            <Button x:Name="AgregarProducto" Content="NuevoProducto" Style="{StaticResource MaterialDesignFlatButton}" Click="AgregarProducto_Click"/>
        </StackPanel>
        <Grid>
            <DataGrid x:Name="dgAñadirProducto" ItemsSource="{Binding _listaProductos}" AutoGenerateColumns="False" ColumnWidth="*" CanUserAddRows="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Descripcion}"/>
                    <DataGridTextColumn Header="Categoria" Binding="{Binding CategoriaNavigation.Categoria1}"/>
                    <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}"/>

                    <DataGridTemplateColumn Header="Precio">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate >
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Precio}"/>
                                    <TextBlock Text="€"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Nombre de modelo" Binding="{Binding Ubicacion}"/>

                    <DataGridTemplateColumn Header="Editar - Borrar">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>

                                <StackPanel Orientation="Horizontal">
                                    <Button Content="{mat:PackIcon Kind=Edit}" Style="{StaticResource MaterialDesignToolButton}" Foreground="DodgerBlue" />
                                    <Button Content="{mat:PackIcon Kind=Delete}" Foreground="Red" Style="{StaticResource MaterialDesignToolButton}" />
                                </StackPanel>

                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>

            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
