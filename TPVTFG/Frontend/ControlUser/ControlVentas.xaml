<UserControl x:Class="TPVTFG.Frontend.ControlUser.ControlVentas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPVTFG.Frontend.ControlUser"
             xmlns:ent ="clr-namespace:TPVTFG.Backend.Modelos"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Left" Width="300">
            <TreeView x:Name="treeVentas" ItemsSource="{Binding _listaVentas}" SelectedItemChanged="treeVentas_SelectedItemChanged">

                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type ent:Venta}" ItemsSource="{Binding VentaProductos}">
                        <StackPanel Orientation="Horizontal">
                            <mat:PackIcon Kind="Box" Width="16" Height="16" Foreground="DodgerBlue"/>
                            <TextBlock Text="{Binding Cliente.Nombre}"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type ent:VentaProducto}" ItemsSource="{Binding Salida}">
                        <StackPanel Orientation="Horizontal">
                            <mat:PackIcon Kind="User" Width="16" Height="16" Foreground="DodgerBlue"/>
                            <!--<TextBlock Text="{Binding}"/> Esta funciona con el toString -->
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1} ({2} préstamos)">
                                        <Binding Path="Nombre"/>
                                        <Binding Path="Apellido1"/>
                                        <Binding Path="Salida.Count"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                   
                </TreeView.Resources>

            </TreeView>
        </Grid>
        <Grid >
            <DataGrid x:Name="dgPrestamos" AutoGenerateColumns="False" ColumnWidth="*" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn  Header="Nombre de usuario" Binding="{Binding UsuarioNavigation}"/>
                    <DataGridTextColumn  Header="Nombre del modelo" Binding="{Binding ArticuloNavigation.ModeloNavigation.Nombre}"/>
                    <DataGridTextColumn  Header="Numero de serie" Binding="{Binding ArticuloNavigation.Numserie}"/>
                    <DataGridTextColumn  Header="Fecha de devolucion" Binding="{Binding Fechadevolucion, StringFormat=dd-MM-yyyy}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
