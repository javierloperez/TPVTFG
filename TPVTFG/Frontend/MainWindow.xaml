<mah:MetroWindow x:Class="TPVTFG.Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPVTFG"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        ShowTitleBar="False" WindowState="Maximized" ShowCloseButton="False" ShowMaxRestoreButton="False" ShowMinButton="False " TitleBarHeight="50">

    <DockPanel>
        <Grid Background="#00B2CA" DockPanel.Dock="Top" Height="85">
            <Button x:Name="cerrarSesion" Foreground="White" Click="cerrarSesion_Click" Style="{StaticResource MaterialDesignFlatButton}" BorderBrush="CornflowerBlue" HorizontalAlignment="Right" Margin="0 0 10 0" Content="Salir" FontSize="30" Height="76"/>

            <Button x:Name="btnStock" Content="Stock" Style="{StaticResource MaterialDesignFlatButton}" Background="CornflowerBlue" mat:ButtonAssist.CornerRadius="15" Height="76" HorizontalAlignment="Center" FontSize="30" Foreground="White" Click="btnStock_Click"/>
        </Grid>
        <Grid x:Name="panelPrincipal" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.1*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="0.6*"/>
            </Grid.ColumnDefinitions>


            <Grid.RowDefinitions>
                <RowDefinition Height="2.3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ScrollViewer Background="#FDFCFB">

                <StackPanel x:Name="panelTicket" Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Producto" FontSize="15" />
                        <TextBlock Text="Cantidad" FontSize="15" Margin="70 0 25 0" />
                        <TextBlock Text="Precio" FontSize="15"/>
                    </StackPanel>
                    <Separator/>

                </StackPanel>

            </ScrollViewer>

            <WrapPanel Grid.Column ="1" Background="#D9BEEA" x:Name="panelMedio"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="2">
                <StackPanel Grid.Column ="2" x:Name="panelCategorias" />

            </ScrollViewer>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1.7*"/>
                </Grid.RowDefinitions>
                <Grid Background="Wheat" x:Name="panelTotal">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Total" FontSize="20" Margin="10 0 0 0"/>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Right"  x:Name="precioTotal" FontSize="20" Margin="0 0 10 0"/>
                </Grid>
                <Button x:Name="Calculadora" Grid.Row="1" Click="Calculadora_Click" Height="150" VerticalAlignment="Bottom">
                    <Button.Content>
                        <Image Source="/Iconos/Calculadora.png" />

                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
    </DockPanel>
</mah:MetroWindow>
