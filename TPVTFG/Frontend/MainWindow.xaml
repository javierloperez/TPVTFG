<mah:MetroWindow x:Class="TPVTFG.Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPVTFG"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        ShowTitleBar="False" WindowState="Maximized" ShowCloseButton="False" ShowMaxRestoreButton="False" ShowMinButton="False " TitleBarHeight="50">
    
    <DockPanel>
        <Grid Background="#00B2CA" DockPanel.Dock="Top" Height="85">
            <Button x:Name="cerrarSesion" Foreground="White" Click="cerrarSesion_Click" Style="{StaticResource MaterialDesignOutlinedButton}" BorderBrush="Transparent" HorizontalAlignment="Right" Margin="0 0 10 0" Content="Salir" FontSize="30" Height="76"/>
        </Grid>
        <Grid x:Name="panelPrincipal" >
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="2.3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column ="0" Background="Red"/>
            <StackPanel Grid.Column ="1" Background="#D9BEEA"/>
            <StackPanel Grid.Column ="2" Background="Red"/>
            <Button x:Name="Calculadora" Grid.Row="1" Click="Calculadora_Click" Height="150" VerticalAlignment="Bottom">
                <Button.Content>
                    <Image Source="/Iconos/Calculadora.png" />
                </Button.Content>
            </Button>
        </Grid>
    </DockPanel>
</mah:MetroWindow>
