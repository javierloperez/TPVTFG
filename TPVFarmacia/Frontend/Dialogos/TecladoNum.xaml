<mah:MetroWindow x:Class="TVPFarmacia.Frontend.Dialogos.TecladoNum"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVPFarmacia.Frontend.Dialogos"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Height="300" Width="300" ShowMinButton="False" ShowMaxRestoreButton="False"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Números -->
        <Button Content="1" Grid.Row="0" Margin="1" Height="50" Grid.Column="0" Click="Boton_Click"/>
        <Button Content="2" Grid.Row="0" Margin="1"  Height="50" Grid.Column="1" Click="Boton_Click"/>
        <Button Content="3" Grid.Row="0" Margin="1" Height="50" Grid.Column="2" Click="Boton_Click"/>

        <Button Content="4" Grid.Row="1" Margin="1" Height="50" Grid.Column="0" Click="Boton_Click"/>
        <Button Content="5" Grid.Row="1" Margin="1" Height="50" Grid.Column="1" Click="Boton_Click"/>
        <Button Content="6" Grid.Row="1" Margin="1" Height="50" Grid.Column="2" Click="Boton_Click"/>

        <Button Content="7" Grid.Row="2" Margin="1" Height="50" Grid.Column="0" Click="Boton_Click"/>
        <Button Content="8" Grid.Row="2" Margin="1" Height="50" Grid.Column="1" Click="Boton_Click"/>
        <Button Content="9" Grid.Row="2" Margin="1" Height="50" Grid.Column="2" Click="Boton_Click"/>

        <!-- 0 y borrar -->
        <Button Content="0" Grid.Row="3" Margin="1" Height="50" Grid.Column="1" Click="Boton_Click"/>
        <Button Content="←" Grid.Row="3" Margin="1" Height="50" Grid.Column="0" Click="Borrar_Click"/>
        <Button Content="OK" Grid.Row="3" Margin="1" Height="50" Grid.Column="2" Click="Ok_Click"/>
    </Grid>
</mah:MetroWindow>
